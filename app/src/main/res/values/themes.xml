<resources>

    <style name="Theme.TowerDefense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryVariant">@color/light_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_green</item>
        <item name="colorSecondaryVariant">@color/light_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TowerDefense.Fullscreen" parent="Theme.TowerDefense">
        <item name="android:actionBarStyle">@style/Widget.Theme.TowerDefense.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.TowerDefense.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/dark_brown</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.Main" parent="Theme.AppCompat.NoActionBar">
        <item name="alertDialogTheme">@style/Preference.Dialog</item>
        <item name="checkboxStyle">@style/CheckBox.Button</item>
        <item name="checkBoxPreferenceStyle">@style/CheckBox.Text</item>
        <item name="dialogPreferenceStyle">@style/ListPref.Text</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.TowerDefense.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_brown</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.NoActionBar.Main</item>
    </style>
</resources>